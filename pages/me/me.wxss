/* 设置整体居中，占屏90% */
.main {
  display: flex;
  justify-content: center;
}

.main-content {
  width: 90%;
  display: flex;
  flex-direction: column;
}

.head-bar {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  border-bottom: 1px solid rgb(233, 228, 228);
  border-radius: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.like-list {
  width: 100%;
